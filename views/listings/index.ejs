<% layout("/layouts/boilerplate") %>
<div id="filters" class="d-flex overflow-x-auto py-2">
  <div class="d-flex flex-nowrap">
    <div class="filter">
      <i class="fa-solid fa-fire"></i>
      <p class="filter-p">Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p class="filter-p">Rooms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Campings</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-igloo"></i></div>
      <p>Artic</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beachfront</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-basketball"></i></div>
      <p>Play</p>
    </div>
  </div>

  <div class="tax-toggle ms-auto flex-shrink-0">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault"
        >Display total before taxes
      </label>
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 main">
  <% for(let listing of allListings ) {%>
  <a href="/listings/<%= listing._id %>">
    <div class="card listing-card card-img-top">
      <!-- IMAGE CAROUSEL -->
      <div id="carousel-<%= listing._id %>" class="carousel slide">
        <div class="carousel-inner card-img-top">
          <% listing.image.forEach((img, index) => { %>
          <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
            <img
              src="<%= img.url %>"
              class="d-block w-100"
              alt="listing_image"
            />
          </div>
          <% }); %>
        </div>

        <!-- Carousel Controls -->
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#carousel-<%= listing._id %>"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#carousel-<%= listing._id %>"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

      <!-- Card Details -->
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          &#8377; <%= (listing.price ?? 2000).toLocaleString("en-IN") %>/night
          <i class="card-text tax-info">&nbsp; &nbsp; +18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
